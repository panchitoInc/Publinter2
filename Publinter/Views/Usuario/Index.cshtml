@model BibliotecaClases.Entities.Usuario
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";


    List<BibliotecaClases.Entities.Usuario> listaUsuario = ViewBag.ListaUsuarios;
}
<script type="text/html">
    $(document).ready(fucntion(){

    $("#ListadoUsuariosTable").DataTable();
    });
</script>

<link href="~/Content/Admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<div class="box">
    <div class="box-header">
        <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Listados de usuarios</font></font></h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="col-sm-12">
                <table id="ListadoUsuariosTable" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Nombre de usuario</th>
                            <th>Rol</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (listaUsuario != null)
                         {
                            foreach (var i in listaUsuario)
                            {
                               <tr>
                                   <td>@i.Nombre</td>
                                   <td>@i.Apellido</td>
                                   <td>@i.NombreUsuario</td>
                                   <td>@i.Rol.Descripcion</td>
                               </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>No hay datos para mostrar</td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>
<script src="~/Content/Admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>