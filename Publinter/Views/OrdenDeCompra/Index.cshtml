@model IList<DataModule.EntitiesResult.Get_index_orden_decompra>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function(){
        InitTable("#ListadoOrdenDeCompras");
    });

</script>

<link href="~/Content/Admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<div class="box">
    <div class="box-header row">
        <div class="col-xs-3">
            <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Orden de compra</font></font></h3>
        </div>
        <div class="col-xs-3 col-xs-offset-6">
            <a href="../../OrdenDeCompra/Create" type="button" class="btn btn-block btn-success pull-right">Nueva Orden de compra</a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="col-sm-12">
                <table id="ListadoOrdenDeCompras" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Medio</th>
                            <th>Total salidas</th>
                            <th>Saldo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var i in Model)
                            {
                        <tr>
                            <td>@i.NumeroDeOrdenDeCompra</td>

                            <td>@i.Nombre</td>
                            <td>@String.Format("{0:0.00}",i.Salidas)</td>
                            <td>@String.Format("{0:0.00}", i.Saldo)</td>

                        </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>No hay datos para mostrar</td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>
<script src="~/Content/Admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/Utils.js"></script>

