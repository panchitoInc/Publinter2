
@model  DataModule.Entities.Anunciante
@{
    int index = (ViewData["indexContacto"] == null) ? 0 : (int)ViewData["indexContacto"];
}


<div class="col-lg-12">
    <h4 class="box-title">Contactos</h4>
</div>
    
<div class="col-lg-12">
    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
        <table id="ListaContactos" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
                <tr>
                    <th class="ContactoNobre">Nombre</th>
                    <th class="Email">Email</th>
                    <th class="Telefono">Telefono</th>
                    <th class="Direccion hidden">Direccion</th>
                    <th class="Ciudad hidden">Ciudad</th>
                    <th class="Departamento hidden">Departamento</th>
                    <th class="text-center">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Contactos.Count; i++)
                {
                    ViewData["indexContacto"] = i;
                    @Html.Partial("~/Views/Anunciante/Contacto/contacto_renglon.cshtml")
                }
            </tbody>
        </table>
    </div>
</div>