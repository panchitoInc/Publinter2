@model IList<DataModule.Entities.Material>

@{
    ViewBag.Title = "Materiales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function()
    {
        $("#ListadoMaterialesTable").DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por pagina.",
                "zeroRecords": "No hay registros",
                "info": "Mostrandos pagina _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros disponibles",
                "infoFiltered": "(Filtrado de _MAX_ reigstros totales)",
                "search": "Buscar ",
                "paginate": {
                    "previous": "Anterior ",
                    "next": " Siguiente"
                }
            }
        });
    });
</script>

<link href="~/Content/Admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="box">
    <div class="box-header">
        <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Materiales</font></font></h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="col-sm-12">
                <table id="ListadoMaterialesTable" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th>Titulo</th>
                            <th>Tipo</th>
                            <th>Duracion (s)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Titulo</td>
                                    <td>@i.Descripcion</td>
                                    <td>@i.DuracionSegundos</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>No hay datos para mostrar</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>
<script src="~/Content/Admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>

