@model DataModule.Entities.TipoMaterial
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

   
}
<style type="text/css">
    #mensajeExito {
        width: 195px;
        height: 24px;
        border-radius: 3px;
        background-color: #04ab5e;
        margin-top: 56px;
        text-align: center;
        padding-top: 1px;
    }
</style>
<script type="text/javascript">
    function GuardarTipoMaterial() {
        if ($("#Descripcion").val() != "")
            AjaxPost('@Url.Action("Create", "TipoMaterial")', GetCurrentModel("TipoMaterialCreateForm"), GuardarTipoMaterialSuccess, 0);
        else
            $("#Descripcion").css("border-bottom", "1px solid red");
    }

    function GuardarTipoMaterialSuccess(data, index) {
        if (data) {
            $("#mensajeExito").fadeIn();
            setTimeout(function () { $("#mensajeExito").fadeOut(); }, 2000);

        } else {
            $("#Mensaje").text(data).fadeIn();
            setTimeout(function () { $("#Mensaje").fadeOut(); }, 2000);
        }
    }
</script>
<div class="register-box-body col-xs-12" style="">
    <p style="font-size: 22px;padding-bottom: 7px;margin-bottom:10px;">Nuevo tipo material</p>

    @using (Html.BeginForm("Create", "TipoMaterial", FormMethod.Post, new { enctype = "multipart/form-data", @id = "TipoMaterialCreateForm" }))
    {
        <div style="height:49px;">
            <div class="col-xs-6" style="padding-left:0px">
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control", @placeholder = "Titulo" })
                </div>
            </div>
        </div>

        <div style="margin-top:20px">
            <div class="col-xs-8" style="padding-left:0px">
                <span id="Mensaje" style="display:none;"></span>
            </div>
            <!-- /.col -->
            <div class="col-xs-4" style="padding-right:0px">
                <a onclick="javascript:GuardarTipoMaterial();" class="btn btn-primary btn-block btn-flat">Guardar</a>
            </div>
            <!-- /.col -->
        </div>
    }
    <div id="mensajeExito" style="display:none;">
        <div style="opacity: 1; margin-top: 0px;">
            <div>
                <label style="color:#fff;font-size:14px;">Generado correctamente.</label> 
            </div>
        </div>
    </div>
</div><!-- /.register-box -->
<script src="~/Scripts/Utils.js"></script>